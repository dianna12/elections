<p id="notice"><%= notice %></p>

<h1>Listing Votes</h1>

<table>
  <thead>
    <tr>
      <th>Number</th>
      <th>Committee</th>
      <th>Constituency</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @votes.each do |vote| %>
      <tr>
        <td><%= vote.number %></td>
        <% if vote.committee %>
          <td><%= vote.committee.name %></td>
          <% else %>
            <td><%= vote.committee %></td>
        <% end %>
        <% if vote.constituency %>
          <td><%= vote.constituency.name %></td>
          <% else %>
            <td><%= vote.constituency %></td>
        <% end %>
        <td><%= link_to 'Show', vote %></td>
        <td><%= link_to 'Edit', edit_vote_path(vote) %></td>
        <td><%= link_to 'Destroy', vote, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

